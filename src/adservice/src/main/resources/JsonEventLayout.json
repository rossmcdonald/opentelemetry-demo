{
    "timestamp": {
        "$resolver": "timestamp",
        "pattern": {
            "format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
            "timeZone": "UTC"
        }
    },
    "level": {
        "$resolver": "level",
        "field": "name"
    },
    "message": {
        "$resolver": "message",
        "stringified": true
    },
    "process.thread.name": {
        "$resolver": "thread",
        "field": "name"
    },
    "trace_id": {
        "$resolver": "pattern",
        "pattern": "%X{trace_id}",
        "stringified": true,
        "stackTraceEnabled": false
    },
    "span_id": {
        "$resolver": "pattern",
        "pattern": "%X{span_id}",
        "stringified": true,
        "stackTraceEnabled": false
    },
    "trace_flags": {
        "$resolver": "pattern",
        "pattern": "%X{trace_flags}",
        "stringified": true,
        "stackTraceEnabled": false
    },
    "logger": {
        "$resolver": "logger",
        "field": "name"
    },
    "error.type": {
        "$resolver": "exception",
        "field": "className"
    },
    "error.message": {
        "$resolver": "exception",
        "field": "message"
    },
    "error.stack_trace": {
        "$resolver": "exception",
        "field": "stackTrace",
        "stackTrace": {
            "stringified": true
        }
    }
}